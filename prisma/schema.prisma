model Gain {
    id                  Int      @id @default(autoincrement())
    gain_caisse         Int
    gain_date_achat     DateTime
    gain_dt_retrait     DateTime
    gain_numero_tirage  String
    gain_refProduit     Int
    gain_produit        Produit @relation(fields:[gain_refProduit], references: [id]) 
}

model Produit {
    id                  Int     @id @default(autoincrement())
    prod_actif          Boolean
    prod_nb_total       Int
    prod_pct_tirage     Float
    gains               Gain[]
}
